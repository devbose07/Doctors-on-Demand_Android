<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg">

    <com.globussoft.readydoctors.doctor.imagelib.AccountImageView
        android:id="@+id/profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher"
        app:maskDrawable="@drawable/circle_mask" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/rating"
        android:layout_toRightOf="@+id/profile_pic"
        android:paddingBottom="5dp"

        android:text="afajlflkadsjflkjdsf dflksdfdsjlkfksdjksd dflkdfksdkfjsdjfl djfsdfsdkfkdsfjsdfjsdjkfn  dfdfjdkfjdkfkd"
        android:textColor="@color/dark_pink"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/byName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rating"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="a s"
        android:textColor="@color/dark_pink"
        android:textSize="10dp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating"
        style="@style/foodRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/comment"
        android:layout_marginRight="5dp"
        android:isIndicator="true"
        android:numStars="5" />

</RelativeLayout>