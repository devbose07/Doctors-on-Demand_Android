<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerRlt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_bg"
         >

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:layout_toRightOf="@+id/backImage"
            android:src="@drawable/head_logo" />

        <TextView
            android:id="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SETUP"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="16sp" />

       <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Next"
           android:layout_margin="5dp"
           android:fontFamily="sans-serif-light"
            android:textColor="@color/dark_pink"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/who"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                
                android:text="Who is the Patient ?"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="25sp" />

            <RelativeLayout
                android:id="@+id/me_Rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/inner_menubox"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                 android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Me"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"/>
                <CheckBox 
                    android:id="@+id/meChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:button="@drawable/radio_selector"
                    android:layout_alignParentRight="true"
                    android:checked="true"/>
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_child_Rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/inner_menubox"
                
                android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Child"
                    android:layout_centerVertical="true"
                    android:textStyle="normal"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"/>
                <CheckBox 
                    android:id="@+id/myChildChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:button="@drawable/radio_selector"
                    android:layout_alignParentRight="true"
                   />
                
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/some_one_Rlt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:background="@drawable/inner_menubox"
                
                android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Someone Else"
                    android:layout_centerVertical="true"
                    android:textStyle="normal"
                    android:layout_margin="10dp"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"/>
                <CheckBox 
                    android:id="@+id/someOneChk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:button="@drawable/radio_selector"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <TextView
                android:id="@+id/nothanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="sans-serif-light"
                android:text="No Thanks"
                android:textStyle="normal"
                android:textColor="@color/light_sky"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>