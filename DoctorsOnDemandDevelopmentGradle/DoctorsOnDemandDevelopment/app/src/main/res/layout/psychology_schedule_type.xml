<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerRlt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_bg"
         >

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/backImage"
            android:src="@drawable/head_logo" />

         <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-light"
            android:text="HOW TO SCHEDULE"
             android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Next"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/dark_pink"
            android:textSize="16sp"
            android:layout_margin="5dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/headerRlt"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:text="How would you like to schedule ?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
   <RelativeLayout 
       
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/findpsychologist"
       android:layout_margin="20dp"
       android:layout_below="@+id/textView1"
       android:background="@drawable/pink_btn">
       <TextView 
           android:id="@+id/consultant"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Find a psychologist"
           android:textColor="@color/White"
           android:textStyle="bold"
           android:textSize="20dp"
           android:fontFamily="sans-serif-light"
           android:layout_centerInParent="true"
           android:layout_margin="10dp"/>
   </RelativeLayout>
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/findTime"
       android:layout_marginTop="5dp"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       android:layout_below="@+id/findpsychologist"
       android:background="@drawable/pink_btn">
       <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Find a Time"
           android:textColor="@color/White"
           android:textStyle="bold"
           android:textSize="20dp"
           android:fontFamily="sans-serif-light"
           android:layout_centerInParent="true"
           android:layout_margin="10dp"/>
   </RelativeLayout>

    
</RelativeLayout>