<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White">
    <RelativeLayout
        android:id="@+id/headerRlt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_bg"
        >
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/backImage"
            android:src="@drawable/head_logo" />
        <TextView
            android:id="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_toRightOf="@+id/logo"
            android:text="Get Free Visits"
            android:textSize="16sp"
            android:textStyle="bold" />
        <!-- <TextView
             android:id="@+id/next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:text="Next"
             android:textColor="@color/Pink"
             android:textSize="16sp"
             android:textStyle="bold" />-->
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/noteRlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerRlt"
        android:background="@color/dark_pink"
        >
        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHARE YOUR PROMOCODE &amp; EARN"
            android:textSize="20dp"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            ></TextView>
        <TextView
            android:id="@+id/promocode"
            android:layout_below="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RAGH123"
            android:layout_margin="20dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            ></TextView>
    </RelativeLayout>
    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/noteRlt"
        android:layout_margin="20dp"
        android:text="Your friends will get there first visit FREE!! You get $10 Off on your next visit for each friend that signs up. Earn up to $100 for future visits!"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:text="Y"
        android:fontFamily="sans-serif-light"
        android:visibility="invisible"
        android:textSize="2sp"
        android:textStyle="normal" />
    <ImageView
        android:id="@+id/tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/temp"
        android:layout_below="@+id/instructions"
        android:layout_margin="10dp"
        android:src="@drawable/tweet_btn" />

    <ImageView
        android:id="@+id/fshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tweet"
        android:layout_below="@+id/instructions"
        android:layout_margin="10dp"
        android:src="@drawable/share_btn" />
    <ImageView
        android:id="@+id/gmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/temp"
        android:layout_below="@+id/instructions"
        android:layout_margin="10dp"
        android:src="@drawable/email_btn" />
    <ImageView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gmail"
        android:layout_below="@+id/instructions"
        android:layout_margin="10dp"
        android:src="@drawable/text_btn" />
</RelativeLayout>