<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White">
    <RelativeLayout
        android:id="@+id/headerRlt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/card_bg"
        >
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/backImage"
            android:src="@drawable/head_logo" />
        <TextView
            android:id="@+id/edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/logo"
            android:text="Update Profile"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <!-- <TextView
             android:id="@+id/next"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:text="Next"
             android:textColor="@color/Pink"
             android:textSize="16sp"
             android:textStyle="bold" />-->
    </RelativeLayout>
   <RelativeLayout
       android:id="@+id/textRlt"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/headerRlt"
       android:background="@color/LightGrey"
       >
       <TextView
           android:id="@+id/text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginLeft="10dp"
           android:fontFamily="sans-serif-light"
           android:layout_marginTop="40dp"
           android:text="Please update your profile information"
           android:textSize="16sp"
           android:textColor="@color/black"
           android:textStyle="bold" />
   </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textRlt"
        android:background="@color/LightGrey"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/editbox_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/card_bg"
        android:orientation="vertical">
        <EditText
            android:id="@+id/firstName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="sans-serif-light"
            android:hint="First Name"
            android:singleLine="true"
            android:maxLength="25">
            <requestFocus />
        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray" />
        <EditText
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="sans-serif-light"
            android:hint="Last Name"
            android:singleLine="true"
            android:maxLength="25"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray" />
        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="sans-serif-light"
            android:hint="Address"
            android:maxLength="300"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray" />
        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxLength="10"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:fontFamily="sans-serif-light"
            android:hint="Date of Birth"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray" />
        <RelativeLayout
            android:id="@+id/new1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <EditText
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:maxLength="3"
                android:layout_marginLeft="5dp"
                android:background="#00000000"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:inputType="numberDecimal"
                android:hint="Weight (in KG)">
            </EditText>
<ImageView
    android:id="@+id/pxImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/pxlimage2"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_centerHorizontal="true">
</ImageView>
            <EditText
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:maxLength="3"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:fontFamily="sans-serif-light"
                android:hint="Height (in CM)"
                android:layout_toRightOf="@+id/pxImage"
                >
            </EditText>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/new1rr"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <Spinner
                android:id="@+id/spinnerbloodgrp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00000000"
                android:prompt="@string/spinner_blood"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-light"/>

            <ImageView
                android:id="@+id/pxImagerr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pxlimage2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true">
            </ImageView>
            <EditText
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:maxLength="5"
                android:background="#00000000"
                android:fontFamily="sans-serif-light"
                android:hint="Gender"
              android:visibility="invisible"
                >
            </EditText>
            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#00000000"
                android:prompt="@string/spinner_gender"
                android:layout_toRightOf="@+id/pxImagerr"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/dark_gray" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/dark_gray" />
        <EditText
            android:hint="about"
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:maxLength="300"
            />

    </LinearLayout>
            <RelativeLayout
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editbox_layout"
            android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
            android:background="@drawable/pink_btn">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:text="Update"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/White"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:background="@drawable/none_btn_blank">
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="10dp"
                    android:text="Cancel"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/White"
                    android:textSize="20dp"

                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>